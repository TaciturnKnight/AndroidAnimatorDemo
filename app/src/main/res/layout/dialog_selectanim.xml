<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/translucentx"
        style="@style/animator_select_text_style"
        android:text="横向滑动" />

    <View style="@style/line_style" />

    <TextView
        android:id="@+id/translucenty"
        style="@style/animator_select_text_style"
        android:text="竖向滑动" />

    <View style="@style/line_style" />

    <TextView
        android:id="@+id/translucent_bevel"
        style="@style/animator_select_text_style"
        android:text="斜向滑动" />

    <View style="@style/line_style" />

    <TextView
        android:id="@+id/scale"
        style="@style/animator_select_text_style"
        android:text="放大缩小" />

    <View style="@style/line_style" />
    <TextView
        android:id="@+id/fade"
        style="@style/animator_select_text_style"
        android:text="淡入淡出" />

    <View style="@style/line_style" />
    <TextView
        android:id="@+id/rote"
        style="@style/animator_select_text_style"
        android:text="旋转" />

    <View style="@style/line_style" />
    <TextView
        android:id="@+id/group"
        style="@style/animator_select_text_style"
        android:text="组合效果" />

    <View style="@style/line_style" />
</LinearLayout>